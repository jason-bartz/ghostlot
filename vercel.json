{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "typescript": {
          "ignoreBuildErrors": true
        }
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/demo$", "dest": "/demo" },
    { "src": "^/index.html$", "dest": "/index.html" },
    { "src": "^/((?!api|_next/static|_next/image).+)$", "dest": "/$1" }
  ]
}